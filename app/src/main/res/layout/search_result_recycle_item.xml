<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp">


    <ImageView
        android:id="@+id/result_item_add"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_add"
        android:layout_centerVertical="true"/>
    <LinearLayout
        android:id="@+id/result_item_song"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/result_item_add"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_result_song_name"
            style="@style/SongText"
            android:paddingTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:maxLines="1"
            android:text="歌曲名"
            android:textColor="@color/front_song" />

        <TextView
            android:id="@+id/tv_result_singer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/SingerText"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="歌手"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/front_singer"
 />

    </LinearLayout>

</RelativeLayout>