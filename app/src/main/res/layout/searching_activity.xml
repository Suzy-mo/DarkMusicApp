<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SearchActivity"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/search_music_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/search_music_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_back_search"/>
        <SearchView
            android:id="@+id/search_music_searchView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/search_music_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/search_music_top">

        <TextView
            android:id="@+id/search_history_title"
            style="@style/TitleText"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginLeft="40dp"
            android:text="搜索历史"
            android:layout_alignParentTop="true" />

        <ImageView
            android:id="@+id/search_history_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:background="@color/line_bg"
            android:layout_below="@+id/search_history_title"/>
        <ImageView
            android:id="@+id/search_history_delete_iv"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginRight="40dp"
            android:layout_alignParentRight="true"
            android:layout_above="@+id/search_history_line"
            android:src="@drawable/ic_delete"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/search_history_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/search_history_line"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/search_music_before"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_music_history"
        android:layout_marginTop="20dp">


    <TextView
        android:id="@+id/hot_song_title"
        style="@style/TitleText"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginLeft="40dp"
        android:text="热搜榜"
        android:layout_alignParentTop="true" />
    <ImageView
        android:id="@+id/hot_song_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:background="@color/line_bg"
        android:layout_below="@+id/hot_song_title"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_music_hot_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/hot_song_line"
        android:layout_marginTop="23dp"
        />
</RelativeLayout>
    <ScrollView
        android:id="@+id/search_after"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_music_top">
    <ListView
        android:id="@+id/search_music_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_music_top"
        android:divider="@color/line_bg"
        android:dividerHeight="2dp"/>
    </ScrollView>
    <ScrollView
        android:id="@+id/search_result_list_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_music_top"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/search_result_list_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>
    <ProgressBar
        android:id="@+id/search_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_music_top"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>