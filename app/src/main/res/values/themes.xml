<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DarkCloudApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <!--启动页主题样式-->
    <style name="StartTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/start_bg</item>
    </style>

    <!--标题类字体主题样式-->
    <style name="TitleText" >
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#1B1B1C</item>
    </style>

    <!--普通标题类字体主题样式-->
    <style name="Title" >
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#1B1B1C</item>
    </style>
    <!--数字类字体主题样式-->
    <style name="NumberText" >
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#BA5E57</item>
    </style>

    <!--文字类字体主题样式-->
    <style name="ContactText" >
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#5A5959</item>
    </style>

    <!--歌曲名字体主题样式-->
    <style name="SongText" >
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#101010</item>
    </style>
    <!--歌手专辑字体主题样式-->
    <style name="SingerText" >
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#101010</item>
    </style>
</resources>